<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginHorizontal="@dimen/margin_horizontal"
    android:focusable="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/ul_item_margin_top"
        android:layout_marginHorizontal="@dimen/ul_item_margin_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.appcompat.widget.AppCompatImageView
            android:src="@drawable/ic_circle"
            android:layout_marginTop="8dp"
            android:layout_width="4dp"
            android:layout_height="4dp"/>
        <com.example.imagefilter.article.SpannableEditText
            android:id="@+id/edt_content"
            android:hint="Typing..."
            android:textSize="@dimen/ul_item_text_size"
            android:layout_marginHorizontal="8dp"
            android:includeFontPadding="false"
            android:background="@color/transparent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_delete"
        app:srcCompat="@drawable/ic_close_24"
        app:tint="@color/black"
        android:layout_marginTop="4dp"
        android:padding="4dp"
        android:visibility="gone"
        android:layout_gravity="end"
        android:layout_width="24dp"
        android:layout_height="24dp"
        tools:ignore="ContentDescription" />
</FrameLayout>