<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.utils.widget.ImageFilterView
        android:id="@+id/iv_image"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:adjustViewBounds="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:id="@+id/layout_saturation"
        android:layout_marginHorizontal="16dp"
        app:layout_constraintTop_toBottomOf="@id/iv_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">
    <TextView
            android:text="Saturation"
        android:layout_marginEnd="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <com.google.android.material.slider.RangeSlider
            android:id="@+id/slider_saturation"
            android:valueFrom="0.0"
            android:valueTo="20.0"
            android:stepSize="1.0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/layout_brightness"
        android:layout_marginHorizontal="16dp"
        app:layout_constraintTop_toBottomOf="@id/layout_saturation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <TextView
            android:text="Brightness"
            android:layout_marginEnd="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <com.google.android.material.slider.RangeSlider
            android:id="@+id/slider_brightness"
            android:valueFrom="0.0"
            android:valueTo="20.0"
            android:stepSize="1.0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/layout_warmth"
        android:layout_marginHorizontal="16dp"
        app:layout_constraintTop_toBottomOf="@id/layout_brightness"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <TextView
            android:text="Warmth"
            android:layout_marginEnd="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <com.google.android.material.slider.RangeSlider
            android:id="@+id/slider_warmth"
            android:valueFrom="0.0"
            android:valueTo="50.0"
            android:stepSize="1.0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/layout_contrast"
        android:layout_marginHorizontal="16dp"
        app:layout_constraintTop_toBottomOf="@id/layout_warmth"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <TextView
            android:text="Contrast"
            android:layout_marginEnd="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <com.google.android.material.slider.RangeSlider
            android:id="@+id/slider_contrast"
            android:valueFrom="0.0"
            android:valueTo="20.0"
            android:stepSize="1.0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/layout_crossfade"
        android:layout_marginHorizontal="16dp"
        app:layout_constraintTop_toBottomOf="@id/layout_contrast"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <TextView
            android:text="Crossfade"
            android:layout_marginEnd="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <com.google.android.material.slider.RangeSlider
            android:id="@+id/slider_crossfade"
            android:valueFrom="0.0"
            android:valueTo="10.0"
            android:stepSize="1.0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>